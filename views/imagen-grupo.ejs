<main class="contenedor contenedor-formularios">
    <h1><%= nombrePagina %> </h1>
    <form method="post" class="default-form" enctype="multipart/form-data" id="subir-imagen">
        
        <div>
            <div class="drop-area">
                <h3>Arrastra y suelta tu imagen</h3>
                <span>O</span>
                <button>Selecciona tu imagen</button>
                <input type="file" name="imagen" id="input-file" hidden>
            </div>
        </div>

        <div class="campo">
        <% if (grupo.imagen) { %>
                <label>Imagen Actual</label>
                <img src="/uploads/grupos/<%= grupo.imagen %> " width="600">
        <% } else { %>
            <p>No hay imagen actual</p>
            <img width="600" hidden>
        <% } %>
        </div>

        <div class="campo enviar">
            <input type="submit" value="Subir Imagen" class="btn btn-rosa">
        </div>
    </form>
</main>